        <%= form_for @chinema do |f| %>

          <div class="field">
            <%= f.label :chinema_name, "タイトル", class: "label" %>
            <%= f.text_field :chinema_name, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :chinema_body, "感想", class: "label" %>
            <%= f.text_area :chinema_body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :chinema_image, "写真", class: "label" %>
            <%= f.file_field :chinema_image, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :address, "住所", class: "label" %>
            <%= f.text_field :address, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :url, "URL", class: "label" %>
            <%= f.text_field :url, class: "input" %>
          </div>          
          

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>