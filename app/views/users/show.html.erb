<div class="row">
	<div class="col s12 center-align">
		<% if @user.profile_image?%>
			<%= image_tag @user.profile_image.to_s, :size => '400x400' %>
		<% else %>
			<%= image_tag 'no_image.png', :size => '400x400' %>
		<% end %>
  <h4><div><%= @user.username %></div></h4>

  <%= @user.profile %>
   <% if @user.id == current_user.id %>
                <td>
                    <%= link_to "編集", edit_user_path(@user), class: "button is-primary" %>
                </td>
                <% end %>
	</div>