        <%= form_for @movie do |f| %>

          <div class="field">
            <%= f.label :movie_name, "タイトル", class: "label" %>
            <%= f.text_field :movie_name, class: "input" %>
          </div>

          <div class="field">
            <%= f.label :movie_body, "感想", class: "label" %>
            <%= f.text_area :movie_body, class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :movie_image, "写真", class: "label" %>
            <%= f.file_field :movie_image, class: "input" %>
          </div>

          <%= f.submit '投稿', class: "button is-success" %>
        <% end %>

